@model Person
@{
    ViewBag.Title = "Lookup javascript API";
}

<div class="row">
    <div class="col-md-12 col-lg-4">
        <div class="example content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-bars"></i>
                    Autocomplete
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
                    @Html.AutoComplete("Autocomplete", new PeopleLookup())
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="example content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-bars"></i>
                    Lookup
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
                    @Html.Lookup("Lookup", new PeopleLookup())
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="example content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-bars"></i>
                    Multi lookup
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
                    @Html.Lookup("MultiLookup", new PeopleLookup() { Multi = true })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-4">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    View
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
@@Html.AutocompleteFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    View
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
@@Html.LookupFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-4">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    View
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
@@Html.LookupFor(model => model.Ids, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    Javascript configuration
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
$(<span class="str">'.mvc-lookup'</span>).mvclookup({
    readonly: <span class="kwd">false</span>, <span class="com">// Lookup readonly state</span>
    preserveSearch: <span class="kwd">true</span>, <span class="com">// Indicates if dialog search value should be preserved after close</span>
    events: {
        select: <span class="kwd">function</span> (e, data, triggerChanges) {
            <span class="com">// e - event, preventing the default, prevents default lookup selection logic</span>
            <span class="com">// data - an array of selected data</span>
            <span class="com">// triggerChanges - a boolean specifying if input changes should be triggered</span>
        },
        filterChange: <span class="kwd">function</span> (e) {
            <span class="com">// e -  event, preventing the default, prevents default lookup filter change logic</span>
        }
    },
    autocomplete: {
        <span class="com">// JQuery UI autocomplete options</span>
    },
    dialog: {
        <span class="com">// JQuery UI dialog options</span>
    },
    spinner: {
        <span class="com">// JQuery UI spinner options</span>
    },
    resizable: {
        <span class="com">// JQuery UI resizable options</span>
    }
});
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    Javascript methods
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
<span class="com">// Returns lookup's javascript instance</span>
$(<span class="str">'.mvc-lookup'</span>).mvclookup(<span class="str">'instance'</span>);

<span class="com">// Reloads the lookup</span>
$(<span class="str">'.mvc-lookup'</span>).mvclookup(<span class="str">'reload'</span>);

<span class="com">// Opens lookup's dialog browser</span>
$(<span class="str">'.mvc-lookup'</span>).mvclookup(<span class="str">'browse'</span>);
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
</div>
