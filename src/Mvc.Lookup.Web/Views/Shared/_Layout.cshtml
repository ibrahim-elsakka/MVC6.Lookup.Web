<!doctype html>
<html>
<head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" href="javascript:void" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="keywords" content="datalist,lookup,ajax,mvc,core" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Lookup controls for ASP.NET MVC projects.">
    <title>@ViewBag.Title</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

    <environment names="Development">
        <link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet">
        <link href="~/Content/FontAwesome/font-awesome.css" rel="stylesheet">
        <link href="~/Content/MvcLookup/mvc-lookup.css" rel="stylesheet">
        <link href="~/Content/Shared/base.css" rel="stylesheet">
    </environment>
    <environment names="Staging,Production">
        <link asp-append-version="true" href="~/content/page/bundle.min.css" rel="stylesheet">
    </environment>
</head>
<body class="container-fluid">
    @Html.Partial("MvcLookup/_Dialog")
    <div class="row">
        <div class="sidebar col-xl-2">
            <div class="logo">
                <a href="https://github.com/NonFactors/MVC6.Lookup">
                    <span class="fa fa-github">
                        <span class="version">v@(typeof(MvcLookup).GetTypeInfo().Assembly.GetName().Version)</span>
                    </span>
                </a>
            </div>
            <input id="SearchInput" class="sidebar-search" placeholder="Search...">
            <ul>
                <li>
                    @Html.ActionLink("Quick start", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Installation", "Installation", "Home")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Lookup source url", "SourceUrl", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup dialog title", "Title", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup localization", "Localization", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup hidden data", "HiddenData", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup additional filters", "AdditionalFilters", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup initial sort options", "SortOptions", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup initial paging options", "PagingOptions", "Lookup")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Lookup id", "Id", "Lookup")
                </li>
                <li>
                    @Html.ActionLink("Lookup label", "Label", "Lookup")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Lookup column position", "Position", "Column")
                </li>
                <li>
                    @Html.ActionLink("Lookup column css class", "CssClass", "Column")
                </li>
                <li>
                    @Html.ActionLink("Lookup column header title", "Header", "Column")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Lookup reload", "Reload", "Javascript")
                </li>
                <li>
                    @Html.ActionLink("Lookup browse", "Browse", "Javascript")
                </li>
                <li>
                    @Html.ActionLink("Lookup readonly", "Readonly", "Javascript")
                </li>
                <li>
                    @Html.ActionLink("Lookup loading first row", "SelectFirst", "Javascript")
                </li>
                <li>
                    @Html.ActionLink("Lookup loading single row", "SelectSingle", "Javascript")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Binding select event", "Select", "Javascript")
                </li>
                <li>
                    @Html.ActionLink("Binding filter change event", "FilterChange", "Javascript")
                </li>
            </ul>
            <ul>
                <li>
                    @Html.ActionLink("Lookup javascript API", "Api", "Javascript")
                </li>
            </ul>
        </div>
        <div class="col">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <script src="~/Scripts/MvcLookup/mvc-lookup.js"></script>
        <script src="~/Scripts/Shared/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script asp-append-version="true" src="~/scripts/page/bundle.min.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>
