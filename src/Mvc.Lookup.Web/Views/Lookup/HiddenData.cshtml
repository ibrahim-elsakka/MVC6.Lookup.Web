</pre>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#Autocomplete').mvclookup({
            events: {
                select: function (e, data, triggerChanges) {
                    $('#AutocompleteWorking').val(data.length ? data[0]['IsWorking'] : '');
                    $('#AutocompleteId').val(data.length ? data[0]['Id'] : '');
                }
            }
        });
        $('#Lookup').mvclookup({
            events: {
                select: function (e, data, triggerChanges) {
                    $('#LookupWorking').val(data.length ? data[0]['IsWorking'] : '');
                    $('#LookupId').val(data.length ? data[0]['Id'] : '');
                }
            }
        });
    </script>
}
