@model Person
@{
    ViewBag.Title = "Lookup select single";
}

<div class="row">
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Autocomplete</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content text-center">
            @Html.AutoComplete("Autocomplete", new PeopleLookup())
            <br />
            <button id="AutocompleteButton" class="btn btn-secondary">Select single person or noone</button>
        </div>
    </div>
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Lookup</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content text-center">
            @Html.Lookup("Lookup", new PeopleLookup())
            <br />
            <button id="LookupButton" class="btn btn-secondary">Select single person or noone</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
@@Html.AutoCompleteFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
        </div>
    </div>
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
@@Html.LookupFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget code col">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>Javascript</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
<pre>
<code>
$(<span class="str">'button'</span>).on(<span class="str">'click'</span>, <span class="kwd">function</span>() {
    <span class="kwd">var</span> triggerChanges = <span class="kwd">true</span>;

    $(<span class="str">'#Id'</span>).mvclookup(<span class="str">'selectSingle'</span>, triggerChanges);
});
</code>
</pre>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#AutocompleteButton').on('click', function () {
            $('#Autocomplete').mvclookup('selectSingle');
        });

        $('#Lookup').mvclookup('instance').dialog.filter.search = 'joe';
        $('#LookupButton').on('click', function () {
            $('#Lookup').mvclookup('selectSingle');
        });
    </script>
}
