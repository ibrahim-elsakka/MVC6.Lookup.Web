@model Person
@{
    ViewBag.Title = "Lookup readonly";
}

<div class="row">
    <div class="col-md-6">
        <div class="example content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-bars"></i>
                    Autocomplete
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content text-center">
                    @Html.AutoComplete("Autocomplete", new PeopleLookup() { ReadOnly = true }, 1)
                    <br />
                    <button id="AutocompleteButton" class="btn btn-default">Toggle read only state</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="example content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-bars"></i>
                    Lookup
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content text-center">
                    @Html.Lookup("Lookup", new PeopleLookup(), 5)
                    <br />
                    <button id="LookupButton" class="btn btn-default">Toggle read only state</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    View
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
@@Html.AutocompleteFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    View
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
@@Html.LookupFor(model => model.Id, <span class="kwd">new</span> <span class="cls">PeopleLookup</span>())
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="example-code content-block">
            <div class="widget">
                <div class="widget-header">
                    <i class="fa fa-code"></i>
                    Javascript
                    <span class="widget-buttons">
                        <i class="content-toggle"></i>
                    </span>
                </div>
                <div class="widget-content">
<pre>
<code>
$(<span class="str">'button'</span>).on(<span class="str">'click'</span>, <span class="kwd">function</span>() {
    <span class="kwd">var</span> readonly = !$(<span class="str">'#Id'</span>).closest(<span class="str">'.mvc-lookup'</span>).hasClass(<span class="str">'mvc-lookup-readonly'</span>);

    $(<span class="str">'#Id'</span>).mvclookup({ readonly: readonly });
});
</code>
</pre>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
<script>
    $('#AutocompleteButton').on('click', function () {
        $('#Autocomplete').mvclookup({ readonly: !$('#Autocomplete').closest('.mvc-lookup').hasClass('mvc-lookup-readonly') });
    });

    $('#LookupButton').on('click', function () {
        $('#Lookup').mvclookup({ readonly: !$('#Lookup').closest('.mvc-lookup').hasClass('mvc-lookup-readonly')});
    });
</script>
}