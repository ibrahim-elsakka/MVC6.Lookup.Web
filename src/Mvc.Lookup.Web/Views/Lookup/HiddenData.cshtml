        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Autocomplete</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
            <div class="row">
                <div class="col">
                    @Html.TextBox("AutocompleteId", null, new { @class = "form-control text-center", placeholder = "Person ID" })
                </div>
                <div class="col">
                    @Html.TextBox("AutocompleteWorking", null, new { @class = "form-control text-center", placeholder = "Employment status" })
                </div>
            </div>

            <br />

            @Html.AutoComplete("Autocomplete", new PeopleLookup())
        </div>
    </div>
    <div class="widget example col">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Lookup</span>
            <div class="widget-buttons">
                <span class="fa fa-minus content-toggle"></span>
            </div>
        </div>
        <div class="widget-content">
            <div class="row">
                <div class="col">
                    @Html.TextBox("LookupId", null, new { @class = "form-control text-center", placeholder = "Person ID" })
                </div>
                <div class="col">
                    @Html.TextBox("LookupWorking", null, new { @class = "form-control text-center", placeholder = "Employment status" })
                </div>
            </div>

            <br />

            @Html.Lookup("Lookup", new PeopleLookup())
        </div>
    </div>
</div>

