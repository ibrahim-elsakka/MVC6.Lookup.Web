@{
    ViewBag.Title = "Lookup readonly";
}

<div class="row">
    <div class="widget example col-xl-6">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Autocomplete</span>
        </div>
        <div class="widget-content">
            <div class="row">
                <div class="col-xl-9">
                    <div mvc-lookup="Autocomplete" url="AllPeople" title="People" value="1" readonly="true" browser="false"></div>
                </div>
                <div class="col-xl-3">
                    <button id="AutocompleteButton" class="btn btn-secondary">Toggle readonly</button>
                </div>
            </div>
        </div>
    </div>
    <div class="widget code col-xl-6">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
        </div>
        <div class="widget-content">
<pre>
<code class="tag">&lt;div mvc-lookup-for<span class="kwd">="Id"</span> url<span class="kwd">="AllPeople"</span> title<span class="kwd">="People"</span> readonly=<span class="kwd">"true"</span> browser<span class="kwd">="false"</span>&gt;&lt;/div&gt;</code>
</pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget example col-xl-6">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Lookup</span>
        </div>
        <div class="widget-content">
            <div class="row">
                <div class="col-xl-9">
                    <div mvc-lookup="Lookup" url="AllPeople" title="People" value="5"></div>
                </div>
                <div class="col-xl-3">
                    <button id="LookupButton" class="btn btn-secondary">Toggle readonly</button>
                </div>
            </div>
        </div>
    </div>
    <div class="widget code col-xl-6">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
        </div>
        <div class="widget-content">
<pre>
<code class="tag">&lt;div mvc-lookup-for<span class="kwd">="Id"</span> url<span class="kwd">="AllPeople"</span> title<span class="kwd">="People"</span>&gt;&lt;/div&gt;</code>
</pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget example col-xl-6">
        <div class="widget-header">
            <div class="fa fa-bars"></div>
            <span>Multi lookup</span>
        </div>
        <div class="widget-content">
            <div class="row">
                <div class="col-xl-9">
                    <div mvc-lookup="MultiLookup" url="AllPeople" title="People" value="new [] { 3, 4 }" multi="true"></div>
                </div>
                <div class="col-xl-3">
                    <button id="MultiLookupButton" class="btn btn-secondary">Toggle readonly</button>
                </div>
            </div>
        </div>
    </div>
    <div class="widget code col-xl-6">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>View</span>
        </div>
        <div class="widget-content">
<pre>
<code class="tag">&lt;div mvc-lookup-for<span class="kwd">="Ids"</span> url<span class="kwd">="AllPeople"</span> title<span class="kwd">="People"</span> multi<span class="kwd">="true"</span>&gt;&lt;/div&gt;</code>
</pre>
        </div>
    </div>
</div>

<div class="row">
    <div class="widget code col-xl-12">
        <div class="widget-header">
            <div class="fa fa-code"></div>
            <span>Javascript</span>
        </div>
        <div class="widget-content">
<pre>
<code>document.getElementById(<span class="str">'button'</span>).addEventListener(<span class="str">'click'</span>, <span class="kwd">function</span>() {
    <span class="kwd">var</span> lookup = <span class="kwd">new</span> MvcLookup(document.querySelector(<span class="str">'.mvc-lookup'</span>));
    lookup.set({ readonly: !lookup.readonly });
});</code>
</pre>
        </div>
    </div>
</div>

@section scripts {
    <script>
        document.getElementById('AutocompleteButton').addEventListener('click', function () {
            var lookup = new MvcLookup(document.getElementById('Autocomplete'));
            lookup.set({ readonly: !lookup.readonly });
        });

        document.getElementById('LookupButton').addEventListener('click', function () {
            var lookup = new MvcLookup(document.getElementById('Lookup'));
            lookup.set({ readonly: !lookup.readonly });
        });

        document.getElementById('MultiLookupButton').addEventListener('click', function () {
            var lookup = new MvcLookup(document.querySelector('.mvc-lookup[data-for="MultiLookup"]'));
            lookup.set({ readonly: !lookup.readonly });
        });
    </script>
}
